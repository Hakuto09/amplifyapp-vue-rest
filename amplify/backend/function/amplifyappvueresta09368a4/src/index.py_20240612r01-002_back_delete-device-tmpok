# スキーマ設定
class Request_Item(BaseModel):
    """
    リクエストスキーマ
    """
    id: str
    createdAt: str

class Response_Item(BaseModel):
    """
    レスポンススキーマ
    """
    id: str
    createdAt: str

class Request_PostAccount(BaseModel):
    """
    アカウント登録用リクエストスキーマ
    """
    account_id: str
    account_name: str
    email: str
    password: str

class Response_PostAccount(BaseModel):
    """
    アカウント登録用レスポンススキーマ
    """
    account_name: str
    email: str
    password: str

class Request_PostDGroup(BaseModel):
    """
    デバイスグループ登録用リクエストスキーマ
    """
#    dgroup_id: str
    dgroup_name: str
    account_id: str
    check_existing_flag: int

class Response_PostDGroup(BaseModel):
    """
    デバイスグループ登録用レスポンススキーマ
    """
#    dgroup_name: str
    thingGroupName: str
    thingGroupId: str

class Request_DeleteDGroup(BaseModel):
    """
    デバイスグループ削除用リクエストスキーマ
    """
#    dgroup_id: str
    dgroup_name: str
    account_id: str

class Response_DeleteDGroup(BaseModel):
    """
    デバイスグループ削除用レスポンススキーマ
    """
#    dgroup_name: str
#    thingGroupName: str
#    thingGroupId: str
#    ResponseMetadata: str      # error: Input should be a valid string
    ResponseMetadata: object
#    HTTPStatusCode: str

class Request_PostDevice(BaseModel):
    """
    デバイス登録用リクエストスキーマ
    """
#    device_id: str
    device_name: str
    dgroup_id: str
    account_id: str
    csr: str
    check_existing_flag: int

class Response_PostDevice(BaseModel):
    """
    デバイス登録用レスポンススキーマ
    """
#    thingName: str
#    thingId: str
    certificatePem: str

class Request_DeleteDevice(BaseModel):
    """
    デバイス削除用リクエストスキーマ
    """
#    device_id: str
    device_name: str
    dgroup_id: str

class Response_DeleteDevice(BaseModel):
    """
    デバイス削除用レスポンススキーマ
    """
#    thingName: str
#    thingId: str
    ResponseMetadata: object


