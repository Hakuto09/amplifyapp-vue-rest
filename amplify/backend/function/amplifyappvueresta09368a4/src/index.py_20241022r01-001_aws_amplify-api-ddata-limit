    allow_origins.append(os.environ['ALLOW_ORIGIN'])
    print('After allow_origins.append()')

app.add_middleware(
    CORSMiddleware,
    allow_origins=allow_origins,
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

"""
スキーマ設定
"""
# Item用スキーマ
class Request_Item(BaseModel):
    id: str
    createdAt: str

class Response_Item(BaseModel):
    id: str
    createdAt: str

# アカウント登録用スキーマ
class Request_PostAccount(BaseModel):
    account_id: str
    account_name: str
    email: str
    password: str

class Response_PostAccount(BaseModel):
    account_name: str
    email: str
    password: str

# デバイスグループ登録用スキーマ
class Request_PostDGroup(BaseModel):
#    dgroup_id: str
    dgroup_name: str
    account_id: str
    check_existing_flag: int

class Response_PostDGroup(BaseModel):
#    dgroup_name: str
    thingGroupName: str
    thingGroupId: str

# デバイスグループ削除用スキーマ
class Request_DeleteDGroup(BaseModel):
#    dgroup_id: str
    dgroup_name: str
    account_id: str

class Response_DeleteDGroup(BaseModel):
#    dgroup_name: str
#    thingGroupName: str
#    thingGroupId: str
#    ResponseMetadata: str      # error: Input should be a valid string
    ResponseMetadata: object
#    HTTPStatusCode: str

# デバイス登録用スキーマ
class Request_PostDevice(BaseModel):
#    device_id: str
    device_name: str
    dgroup_id: str
    via_1nce_os: bool
    account_id: str
    csr: str
    check_existing_flag: int

class Response_PostDevice(BaseModel):
#    thingName: str
#    thingId: str
    certificatePem: str
    PrivateKey: str

# デバイスデータ登録 (1NCE OS Webhook) 用スキーマ
# {
#   "payload": {
#     "type": "JSON",
#     "value": {
#       "temperature": 11.1
#     }
#   },
#   "received": "1726030551987",
#   "id": "1-66e122d7-c01ae7d96af483ca64d340df",
#   "source": "UDP",
#   "type": "TELEMETRY_DATA",
#   "version": "1.0.0",
#   "device": {
#     "iccid": "8988228066605204483",
#     "ip": "10.52.132.3",
#     "imsi": "901405105204483"
#   }
# }

class Value(BaseModel):
    temperature: float

class Payload(BaseModel):
    type: str
    value: Union[Value, None] = None

class Device(BaseModel):
    iccid: str
    ip: str
    imsi: str

class Request_PostDdata1nceOs(BaseModel):
    payload: Union[Payload, None] = None
    received: str
    id: str
    source: str
    type: str
    version: str
    device: Union[Device, None] = None

# デバイス削除用スキーマ
class Request_DeleteDevice(BaseModel):
#    device_id: str
    device_name: str
    dgroup_id: str
    via_1nce_os: bool

class Response_DeleteDevice(BaseModel):
#    thingName: str
#    thingId: str
    ResponseMetadata: object


